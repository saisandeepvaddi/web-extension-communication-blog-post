{
  "compilerOptions": {
    "module": "ES2015",
    "target": "ES2015",
    "lib": ["dom", "dom.iterable", "esnext"],
    "outDir": "./extension",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "noImplicitAny": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
